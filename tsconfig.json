{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "*": [
        "*",
        "runtimes/*",
        "runtimes/react-native/*"
      ]
    },
    "module": "commonjs",
    "outDir": "lib/",
    "declaration": false,
    "sourceMap": true,
    "removeComments": true,
    "moduleResolution": "node",
    "target": "ES6",
    "module": "ES6",
    "lib": [
      "ScriptHost",
      "DOM",
      "ES5",
      "ES2015"
    ],
    "downlevelIteration": true
  },
  "include": [
    "src/d.ts/**/*"
  ],
  "files": [
    "src/core/pusher.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
